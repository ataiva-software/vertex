<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/insight-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/insight-service.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Application logs -->
    <logger name="com.ataiva.eden.insight" level="INFO" />
    
    <!-- Database logs -->
    <logger name="org.jetbrains.exposed" level="INFO" />
    <logger name="com.zaxxer.hikari" level="INFO" />
    <logger name="org.flywaydb" level="INFO" />
    
    <!-- HTTP server logs -->
    <logger name="io.ktor" level="INFO" />
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    
    <!-- Development profile configuration -->
    <springProfile name="dev">
        <logger name="com.ataiva.eden.insight" level="DEBUG" />
        <logger name="org.jetbrains.exposed.sql" level="DEBUG" />
    </springProfile>
    
    <!-- Production profile configuration -->
    <springProfile name="prod">
        <logger name="com.ataiva.eden.insight" level="INFO" />
        <logger name="org.jetbrains.exposed.sql" level="WARN" />
    </springProfile>
</configuration>